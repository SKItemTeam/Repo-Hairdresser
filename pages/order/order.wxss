/* pages/order/order.wxss */

html, page, .main-container {
  height: 100%;
  background: #e9e9e9;
}

.line {
  height: 30rpx;
  background: #e9e9e9;
}

.smallLine {
  height: 5rpx;
  background: #e9e9e9;
}

.info {
  background-color: #fff;
  padding: 0 30rpx;
}

.more_img {
  width: 20rpx;
  height: 20rpx;
  margin-left: 20rpx;
}

.flex_row {
  display: flex;
  justify-content: space-between;
  align-items: center;
  flex-direction: row;
}

.row_item {
  padding: 30rpx 20rpx;
}

.item_bold {
  font-weight: bold;
}

.item_gray {
  font-size: 30rpx;
  color: #9a9a9a;
}

.item_yellow {
  color: #f17728;
  font-weight: bold;
}

.item_marginLeft {
  margin-left: 10rpx;
}

.result {
  padding: 30rpx 50rpx;
}

.commitBtn {
  background-color: #d9ba6a;
  position: absolute;
  bottom: 0;
  height: 150rpx;
  width: 100%;
  line-height: 150rpx;
  text-align: center;
  font-weight: bold;
}
